org "<%= node['amanda_part']['config_name'] %>"
infofile "<%= node['amanda_part']['server']['info_file'] %>"
logdir "<%= node['amanda_part']['server']['log_dir'] %>"
indexdir "<%= node['amanda_part']['server']['index_dir'] %>"
dumpuser "<%= node['amanda_part']['execuser'] %>"

<%= node['amanda_part']['server']['definition'] %>

define dumptype dumptype_<%= node['amanda_part']['server']['dumptype'] %> {
    program "GNUTAR"
    compress none
    index
    priority low
}

<% @dumptype_definitions.each do |dumptype_definition| %>
<%= dumptype_definition %>
<% end %>

tapetype <%= node['amanda_part']['server']['tapetype'] %>
tpchanger "<%= node['amanda_part']['server']['tpchanger'] %>"
autolabel "<%= node['amanda_part']['server']['autolabel'] %>" empty VOLUME_ERROR
labelstr "<%= node['amanda_part']['server']['labelstr'] %>"
tapecycle <%= node['amanda_part']['server']['tapecycle'] %>
dumpcycle <%= node['amanda_part']['server']['dumpcycle'] %>

holdingdisk <%= node['amanda_part']['server']['holdingdisk']['name'] %> {
    directory "<%= node['amanda_part']['server']['holdingdisk']['directory'] %>"
    use <%= node['amanda_part']['server']['holdingdisk']['use'] %>
    chunksize <%= node['amanda_part']['server']['holdingdisk']['chunksize'] %>
}
